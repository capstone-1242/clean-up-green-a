<section class="hero-section">
  <header class="hero-text-box">
    <h2>{{ section.settings.hero_title }}</h2>
    <p>{{ section.settings.hero_description }}</p>
  </header>
</section>

<section class="content-section">
  <div class="card-container">
    <!-- Card 1 -->
    <article class="card">
      <header class="card-content">
        <img src="{{ section.settings.card1_image | file_url }}" alt="{{ section.settings.card1_title }}">
        <h4 class="cleaning-text">{{ section.settings.card1_title }}</h4>
      </header>
      <section class="cleaning-description">
        <p>{{ section.settings.card1_description }}</p>
        <a href="{{ section.settings.card1_link }}" class="button-rounded">
          {{ section.settings.card1_button }}
          <span class="arrow-circle">
            <svg width="20" height="20" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6.22498 18H29.775" stroke="#1C2324" stroke-width="3" stroke-linecap="round" stroke-linejoin="bevel"/>
              <path d="M23.175 25.17L29.34 19.005C29.6194 18.724 29.7762 18.3438 29.7762 17.9475C29.7762 17.5512 29.6194 17.1711 29.34 16.89L23.34 10.89" stroke="#1C2324" stroke-width="3" stroke-linecap="round" stroke-linejoin="bevel"/>
            </svg>
          </span>
        </a>
      </section>
    </article>

    <!-- Card 2 -->
    <article class="card">
      <header class="card-content">
        <img src="{{ section.settings.card2_image | file_url }}" alt="{{ section.settings.card2_title }}">
        <h4 class="cleaning-text">{{ section.settings.card2_title }}</h4>
      </header>
      <section class="cleaning-description">
        <p>{{ section.settings.card2_description }}</p>
        <a href="{{ section.settings.card2_link }}" class="button-rounded">
          {{ section.settings.card2_button }}
          <span class="arrow-circle">
            <svg width="20" height="20" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6.22498 18H29.775" stroke="#1C2324" stroke-width="3" stroke-linecap="round" stroke-linejoin="bevel"/>
              <path d="M23.175 25.17L29.34 19.005C29.6194 18.724 29.7762 18.3438 29.7762 17.9475C29.7762 17.5512 29.6194 17.1711 29.34 16.89L23.34 10.89" stroke="#1C2324" stroke-width="3" stroke-linecap="round" stroke-linejoin="bevel"/>
            </svg>
          </span>
        </a>
      </section>
    </article>

    <!-- Card 3 -->
    <article class="card">
      <header class="card-content">
        <img src="{{ section.settings.card3_image | file_url }}" alt="{{ section.settings.card3_title }}">
        <h4 class="cleaning-text">{{ section.settings.card3_title }}</h4>
      </header>
      <section class="cleaning-description">
        <p>{{ section.settings.card3_description }}</p>
        <a href="{{ section.settings.card3_link }}" class="button-rounded">
          {{ section.settings.card3_button }}
          <span class="arrow-circle">
            <svg width="20" height="20" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6.22498 18H29.775" stroke="#1C2324" stroke-width="3" stroke-linecap="round" stroke-linejoin="bevel"/>
              <path d="M23.175 25.17L29.34 19.005C29.6194 18.724 29.7762 18.3438 29.7762 17.9475C29.7762 17.5512 29.6194 17.1711 29.34 16.89L23.34 10.89" stroke="#1C2324" stroke-width="3" stroke-linecap="round" stroke-linejoin="bevel"/>
            </svg>
          </span>
        </a>
      </section>
    </article>
  </div>
</section>

