<link rel="stylesheet" href="{{ 'section-custom-banner-with-title.css' | asset_url }}">


  {% comment %} <section class="service-banner">
    <img src="{{ 'services-bg.webp' | file_url }}" 
      alt="Services Page Banner" 
      width="1600" 
      height="900" 
      class="services-banner-img">
    <h1 class="service-title">Services</h1>
  </section> {% endcomment %}

  <section class="footprint-banner">
    <img 
        src="{{ section.settings.banner_image | file_url }}" 
        alt="About Banner"
        width="1600" 
        height="600" 
        class="about-banner-img">
    <div class="banner-overlay">
        <h1>{{ section.settings.banner_heading }}</h1>
    </div>
  </section>

  {% schema %}
{
  "name": "Services Page Banner",
  "settings": [
    {
      "id": "banner_heading",
      "type": "text",
      "label": "Banner Heading",
      "default": "Services"
    },
    {
      "type": "text",
      "id": "banner_image",
      "label": "Image Filename",
      "default": "services-bg.webp"
    },
  ]
}
{% endschema %}