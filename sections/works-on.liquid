{{ 'section-works-on.css' | asset_url | stylesheet_tag }}

<div class="works-on-section">
  <div class="works-on-container">
    <h2 id="works-heading" class="works-on-heading">{{ section.settings.works_on_heading }}</h2>

    <div class="image-grid">
      <div class="image-item">
        <img
          src="{{ section.settings.image_1 | file_url }}"
          alt="{{ section.settings.image_1_alt }}"
          width="300"
          height="200"
        >
        <p>{{ section.settings.image_1_title }}</p>
      </div>

      <div class="image-item">
