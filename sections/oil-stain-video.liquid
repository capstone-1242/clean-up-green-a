{{ 'oil-stain-video.css' | asset_url | stylesheet_tag }}



<section class="oil-stain-video-section">
  <h3 class="heading-two">{{section.settings.heading}}</h3>
  <div class="video-content">
    <div class="video-section">
       
              <div class="video-container">
                <video width="100%" controls>
                  <source src="{{ section.settings.file_url }}" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </div>
       
    </div>
    <div class="video-list">
      <ul>
        <li>{{ section.settings.list1 | newline_to_br }}</li>
        <li>{{ section.settings.list2 | newline_to_br }}</li>
        <li>{{ section.settings.list3 | newline_to_br }}</li>
        <li><span class="important">Important! </span>{{ section.settings.list4 | newline_to_br }}</li>
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "use description section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "How to Use the Two Step Liquid"
    },
    {
      "type": "text",
      "id": "file_url",
      "label": "Shopify Video URL",
      "info": "Upload or select your video file.",
      "default": "https://cdn.shopify.com/videos/c/o/v/67e478a3651b42acaca2527ff60f8947.mp4"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "id": "list1",
      "type": "textarea",
      "label": "Step 1",
      "default": "Simple 2 STEP Liquid solution to clean up oil stains and oil odours"
    },
    {
      "id": "list2",
      "type": "textarea",
      "label": "Step 2",
      "default": "Works well on old and new stains"
    },
    {
      "id": "list3",
      "type": "textarea",
      "label": "Step 3",
      "default": "Works on Rock, Concrete, Asphalt, Soil, Sand, Water, Wood"
    },
    {
      "id": "list4",
      "type": "textarea",
      "label": "Step 4",
      "default": "Do not pre-mix STEP 1 & STEP 2 together in advance. Apply individually one at a time to the stain or spill."
    }
  ],
  "presets": [
    {
      "name": "use description section"
    }
  ]
}
{% endschema %}