{% comment %} {% schema %}
{
    "name": "Video Section",
    "settings": [
        {
            "type": "text",
            "id": "video_title_1",
            "label": "Video 1 Title",
            "default": "Cleaning Up Diesel From Hard Surface"
        },
        {
            "type": "url",
            "id": "video_url_1",
            "label": "YouTube Video URL",
        },
        {
            "type": "text",
            "id": "video_title_2",
            "label": "Video 2 Title",
            "default": "Video 2 Heading"
        },
        {
            "type": "url",
            "id": "video_url_2",
            "label": "YouTube Video 2 URL",
        }
        ],
        "presets": [
        {
            "name": "Default",
            "category": "Custom"
        }
    ]
  }

{% endschema %}

<div class="video-section">
    {% if section.settings.video_url_1 %}
      {% if section.settings.video_title_1 %}
        <h2 class="video-title">{{ section.settings.video_title_1 }}</h2>
      {% endif %}
      <div class="video-container">
        <iframe width="560" height="315" src="https://www.youtube.com/watch?v=mPrdrc5xsFs&list=TLGGHEIy5Uhtzq4wODAzMjAyNQ&t=94s{{ section.settings.video_url_1 | split: 'v=' | last }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    {% endif %}
    
    {% if section.settings.video_url_2 %}
      {% if section.settings.video_title_2 %}
        <h2 class="video-title">{{ section.settings.video_title_2 }}</h2>
      {% endif %}
      <div class="video-container">
        <iframe width="550" height="330" src="https://www.youtube.com/watch?v=mPrdrc5xsFs&list=TLGGHEIy5Uhtzq4wODAzMjAyNQ&t=94s{{ section.settings.video_url_2 | split: 'v=' | last }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    {% endif %}

  </div> {% endcomment %}


{% comment %} <iframe frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen" src="pending" title="Cleaning Up Diesel From Hard Surface"></iframe> {% endcomment %}

{% comment %} <iframe frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen" src="https://www.youtube.com/watch?v=mPrdrc5xsFs&list=TLGGHEIy5Uhtzq4wODAzMjAyNQ&t=94s" title="Removing Diesel on Water"></iframe> {% endcomment %}

{% comment %} {% style %}
  .video-section {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
  }

  .video-container {
      width: 48%;
      max-width: 600px;
  }

  @media (max-width: 768px) {
      .video-container {
          width: 100%;
      }
  }
{% endstyle %}

<section id="{{ section.id }}">
    <div class="page-width">
        <div class="video-section">
            {% if section.settings.video_url_1 %}
                <div class="video-container">
                    {{ section.settings.video_url_1 | video_tag: autoplay: true, loop: false, muted: true, controls: true }}
                </div>
            {% endif %}
            
            {% if section.settings.video_url_2 %}
                <div class="video-container">
                    {{ section.settings.video_url_2 | video_tag: autoplay: true, loop: false, muted: true, controls: true }}
                </div>
            {% endif %}
        </div>
    </div>
</section>

