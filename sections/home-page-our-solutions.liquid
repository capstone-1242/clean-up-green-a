                    <h3>{{ section.settings.shop_title }}</h3>
              </div>
              <div class="solution-card-body">
                  <p>{{ section.settings.shop_description }}</p>
                  <a href="{{ section.settings.shop_button_link }}">
                      <button class="button-rounded our-solutions-home-buttons">
                          {{ section.settings.shop_button_text }}
