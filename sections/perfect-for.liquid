{% comment %} Add CSS {% endcomment %}
{{ 'section-perfect-for.css' | asset_url | stylesheet_tag }}

<div class="perfect-for-section">
  <div class="container">
    <h3 class="perfect-for-heading">{{ section.settings.perfect_for_heading }}</h3>
    <div class="grid">
      <div class="list-section">
        {% assign items = section.settings.perfect_for_items | split: ',' %}
        {% assign total_items = items | size %}
        {% assign items_per_column = total_items | divided_by: 4 %}
        
        {% for column in (0..2) %}
          <div class="list-column">
            <ul class="name-list">
              {% assign start_index = column | times: items_per_column %}
              {% assign end_index = start_index | plus: items_per_column %}
              
              {% for i in (start_index..end_index) %}
                {% if i < total_items %}
                  {% assign item = items[i] | strip %}
                  <li>
                    {% render 'check-mark' %}
                    <span>{{ item }}</span>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>

      <div class="image-section">
        <img src="{{ 'perfect-for.webp' | file_url }}" alt="Perfect For Image">
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Perfect For Section",
  "settings": [
    {
      "type": "text",
      "id": "perfect_for_heading",
      "label": "Heading",
      "default": "Perfect For"
    },
    {
      "type": "textarea",
      "id": "perfect_for_items",
      "label": "List Items (Comma-Separated)",
      "default": "Diesel, Gasoline, Motor Oil, Heating Oil, Kerosene, Hydraulic Fluids, Power Steering, Condensate, Fluids, Crude Oil, Jet Fuel, Cutting Fluid"
    }
  ]
}
{% endschema %}
